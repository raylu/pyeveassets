		<table>
			{% for item, quantity, price in items %}
				<tr>
					<td>
						{% if quantity != 1 %}
							{{ quantity }}âœ•
						{% endif %}
					</td>
					<td>{{ item }}</td>
					<td>{{ (price / 100000000)|round(1) }}</td>
				</tr>
